<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joseph.quiz.IdActivity">


    <TextView
        android:id="@+id/tv_uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_startQuiz"
        android:layout_marginBottom="20dp"
        android:text="UID: 3035418529"
        />


   <TextView
       android:id="@+id/tv_name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_above="@+id/tv_uid"
       android:layout_marginBottom="13dp"
       android:text="Name: Zhu Xingye"
       />




    <Button
        android:id="@+id/btn_quit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/btn_bkgnd"
        android:textColor="@color/text_color"
        android:text="Quit"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
         />

    <Button
        android:id="@+id/btn_startQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_above="@id/btn_quit"
        android:layout_marginBottom="13dp"
        android:background="@color/btn_bkgnd"
        android:textColor="@color/text_color"
        android:text="Start Quiz"


        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:src="@drawable/quiz_time"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_above="@id/tv_name"
        android:layout_marginLeft="30dp"
        />


</RelativeLayout>
